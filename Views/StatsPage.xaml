<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:constants="clr-namespace:zuoleme.Constants"
             x:Class="zuoleme.Views.StatsPage"
             Title="统计"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">
     

            <!-- Statistics Cards -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto"
                  ColumnSpacing="12"
                  RowSpacing="12"
                  Margin="0,10,0,20">
                
                <!-- Today -->
                <Border Grid.Row="0" Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackground}"
                       StrokeThickness="0"
                       Padding="16"
                       HeightRequest="120">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8" VerticalOptions="Center">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="{x:Static constants:MaterialIcons.Event}"
                                   FontFamily="MaterialIcons"
                                   FontSize="20"
                                   TextColor="{DynamicResource Gray600}"/>
                            <Label Text="今日"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Gray600}"/>
                        </HorizontalStackLayout>
                        <Label Text="{Binding TodayCount}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Primary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Week -->
                <Border Grid.Row="0" Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackground}"
                       StrokeThickness="0"
                       Padding="16"
                       HeightRequest="120">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8" VerticalOptions="Center">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="{x:Static constants:MaterialIcons.CalendarToday}"
                                   FontFamily="MaterialIcons"
                                   FontSize="20"
                                   TextColor="{DynamicResource Gray600}"/>
                            <Label Text="本周"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Gray600}"/>
                        </HorizontalStackLayout>
                        <Label Text="{Binding WeekCount}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Secondary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Month -->
                <Border Grid.Row="1" Grid.Column="0"
                       BackgroundColor="{DynamicResource CardBackground}"
                       StrokeThickness="0"
                       Padding="16"
                       HeightRequest="120">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8" VerticalOptions="Center">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="{x:Static constants:MaterialIcons.CalendarToday}"
                                   FontFamily="MaterialIcons"
                                   FontSize="20"
                                   TextColor="{DynamicResource Gray600}"/>
                            <Label Text="本月"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Gray600}"/>
                        </HorizontalStackLayout>
                        <Label Text="{Binding MonthCount}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Tertiary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Total -->
                <Border Grid.Row="1" Grid.Column="1"
                       BackgroundColor="{DynamicResource CardBackground}"
                       StrokeThickness="0"
                       Padding="16"
                       HeightRequest="120">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="8" VerticalOptions="Center">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Label Text="{x:Static constants:MaterialIcons.TrendingUp}"
                                   FontFamily="MaterialIcons"
                                   FontSize="20"
                                   TextColor="{DynamicResource Gray600}"/>
                            <Label Text="总计"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource Gray600}"/>
                        </HorizontalStackLayout>
                        <Label Text="{Binding TotalCount}"
                               FontSize="36"
                               FontAttributes="Bold"
                               TextColor="{DynamicResource Gray900}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- All Records Section -->
            <HorizontalStackLayout Spacing="8" Margin="0,20,0,10">
                <Label Text="{x:Static constants:MaterialIcons.Description}"
                       FontFamily="MaterialIcons"
                       FontSize="28"
                       TextColor="{DynamicResource Gray900}"/>
                <Label Text="所有记录"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{DynamicResource Gray900}"/>
            </HorizontalStackLayout>

            <!-- All Records List -->
            <CollectionView ItemsSource="{Binding Records}"
                            SelectionMode="None"
                            EmptyView="暂无记录">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView Margin="0,6">
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="删除"
                                               BackgroundColor="#EF5350"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteRecordCommand}"
                                               CommandParameter="{Binding Id}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <Border BackgroundColor="{DynamicResource CardBackground}"
                                   StrokeThickness="0"
                                   Padding="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>
                                <Border.Shadow>
                                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                                </Border.Shadow>
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                      Padding="16"
                                      ColumnSpacing="12">
                                    <!-- Icon -->
                                    <Border Grid.Column="0"
                                            BackgroundColor="{DynamicResource Primary}"
                                            StrokeThickness="0"
                                            HeightRequest="48"
                                            WidthRequest="48"
                                            VerticalOptions="Center">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="24"/>
                                        </Border.StrokeShape>
                                        <Label Text="{x:Static constants:MaterialIcons.Favorite}"
                                               FontFamily="MaterialIcons"
                                               FontSize="28"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    
                                    <!-- Date and Time -->
                                    <VerticalStackLayout Grid.Column="1" 
                                                       Spacing="4"
                                                       VerticalOptions="Center">
                                        <Label Text="{Binding Timestamp, StringFormat='{0:yyyy年MM月dd日}'}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="{DynamicResource Gray900}"/>
                                        <HorizontalStackLayout Spacing="6">
                                            <Label Text="{x:Static constants:MaterialIcons.Schedule}"
                                                   FontFamily="MaterialIcons"
                                                   FontSize="16"
                                                   TextColor="{DynamicResource Gray600}"
                                                   VerticalOptions="Center"/>
                                            <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm:ss}'}"
                                                   FontSize="14"
                                                   TextColor="{DynamicResource Gray600}"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    
                                    <!-- Arrow -->
                                    <Label Grid.Column="2"
                                           Text="{x:Static constants:MaterialIcons.ChevronRight}"
                                           FontFamily="MaterialIcons"
                                           FontSize="32"
                                           TextColor="{DynamicResource Gray400}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
