<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="zuoleme.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:zuoleme.Views"
    xmlns:constants="clr-namespace:zuoleme.Constants"
    Title="做了么"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="主页"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage">
            <ShellContent.Icon>
                <FontImageSource Glyph="{x:Static constants:MaterialIcons.Home}" 
                                FontFamily="MaterialIcons"
                                Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="统计"
            ContentTemplate="{DataTemplate views:StatsPage}"
            Route="StatsPage">
            <ShellContent.Icon>
                <FontImageSource Glyph="{x:Static constants:MaterialIcons.Assessment}" 
                                FontFamily="MaterialIcons"
                                Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="日历"
            ContentTemplate="{DataTemplate views:CalendarPage}"
            Route="CalendarPage">
            <ShellContent.Icon>
                <FontImageSource Glyph="{x:Static constants:MaterialIcons.CalendarToday}" 
                                FontFamily="MaterialIcons"
                                Size="24"/>
            </ShellContent.Icon>
        </ShellContent>

        <ShellContent
            Title="设置"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage">
            <ShellContent.Icon>
                <FontImageSource Glyph="{x:Static constants:MaterialIcons.Settings}" 
                                FontFamily="MaterialIcons"
                                Size="24"/>
            </ShellContent.Icon>
        </ShellContent>
    </TabBar>

</Shell>
