<?xml version="1.0" encoding="UTF-8"?>
<Shell
    x:Class="zuoleme.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:zuoleme.Views"
    xmlns:constants="clr-namespace:zuoleme.Constants"
    Title="做了么"
    Shell.NavBarIsVisible="False">

    <!-- 使用 TabBar 底部导航 -->
    <TabBar>
        <Tab Title="主页"
             Icon="Resources/Images/home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"
                          Route="HomePage"/>
        </Tab>

        <Tab Title="统计"
             Icon="Resources/Images/stats.svg">
            <ShellContent ContentTemplate="{DataTemplate views:StatsPage}"
                          Route="StatsPage"/>
        </Tab>

        <Tab Title="日历"
             Icon="Resources/Images/calendar.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}"
                          Route="CalendarPage"/>
        </Tab>

        <Tab Title="设置"
             Icon="Resources/Images/settings.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}"
                          Route="SettingsPage"/>
        </Tab>
    </TabBar>

</Shell>
